{
  "openapi": "3.0.2",
  "info": {
    "title": "Accent Detection API",
    "version": "0.1.0",
    "description": "A small API that accepts an audio file and returns a mock regional-accent detection result."
  },
  "paths": {
    "/detect-accent": {
      "post": {
        "summary": "Detect regional accent from uploaded audio",
        "operationId": "detect_accent",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Mock detection result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "region": {"type": "string"},
                    "confidence": {"type": "number", "format": "float"},
                    "filename": {"type": "string"},
                    "content_type": {"type": "string"}
                  }
                },
                "examples": {
                  "mock": {
                    "value": {"region": "Central Vietnam", "confidence": 0.87}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
